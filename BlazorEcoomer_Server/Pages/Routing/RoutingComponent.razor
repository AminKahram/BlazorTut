@inject NavigationManager _NavigateionManager

<h3>RoutingComponent</h3>
<div>@parameter1</div>
<div>@parameter2</div>

<a href="RoutingComponent?param1=testj&param2=tet2" class="btn btn-secondary">navigate to url</a>
<button class="btn btn-danger" @onclick="LoadParameters">Load parameters</button>
<br />
<h2>param 1: @param1</h2>
<h2>param 2: @param2</h2>
@code {
    [Parameter]
    public string parameter1 { get; set; }
    [Parameter]
    public string parameter2 { get; set; }

    public string param1 { get; set; }
    public string param2 { get; set; }

    private void LoadParameters()
    {
        var url = new Uri(_NavigateionManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(url.Query);
        param1 = query["param1"];
        param2 = query["param2"];
    }
}
